{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "build": {
    "env": {
      "CI": "false",
      "REACT_APP_BACKEND_URL": "https://university-club-management-system.onrender.com",
      "REACT_APP_API_URL": "https://university-club-management-system.onrender.com"
    }
  }
}
